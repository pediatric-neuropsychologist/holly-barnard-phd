---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <slot name="head">
      <title>Holly Barnard Ph.D., ABPP-CN</title>
    </slot>
  </head>
  <body class="body-font bg-white">
    <header class="bg-gradient-to-r from-white to-gray-50 shadow-sm border-b">
      <nav
        class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between"
      >
        <a class="flex items-center gap-3" href="/">
          <img
            src="/img/holly-barnard-phd-pediatric-developmental-psychologist-pllc.svg"
            alt="Logo"
            width="60"
            height="56"
            class="flex-shrink-0"
          />
          <div>
            <h1
              class="text-xl md:text-2xl font-bold text-gray-900 leading-tight"
            >
              Holly Barnard Ph.D., ABPP-CN
            </h1>
            <p class="text-sm text-gray-600 hidden md:block">
              Pediatric Neuropsychologist
            </p>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <ul class="hidden md:flex items-center gap-2 whitespace-nowrap">
          <li>
            <a
              href="/what-we-do"
              class="text-sm text-[#9d4ba2] hover:text-[#7a3a7a] focus:outline-none focus:ring-2 focus:ring-[#f3d9f3] rounded px-2 py-1 transition-all duration-150 flex items-center gap-1"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"
                ><path
                  fill-rule="evenodd"
                  d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                  clip-rule="evenodd"></path></svg
              >
              What We Do
            </a>
          </li>
          <li>
            <a
              href="/the-evaluation"
              class="text-sm text-[#9d4ba2] hover:text-[#7a3a7a] focus:outline-none focus:ring-2 focus:ring-[#f3d9f3] rounded px-2 py-1 transition-all duration-150 flex items-center gap-1"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"
                ><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path></svg
              >
              The Evaluation
            </a>
          </li>
          <li>
            <a
              href="/packages-and-fees"
              class="text-sm text-[#9d4ba2] hover:text-[#7a3a7a] focus:outline-none focus:ring-2 focus:ring-[#f3d9f3] rounded px-2 py-1 transition-all duration-150 flex items-center gap-1"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"
                ><path
                  d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"
                ></path></svg
              >
              Packages & Fees
            </a>
          </li>
          <li>
            <a
              href="/faq"
              class="text-sm text-[#9d4ba2] hover:text-[#7a3a7a] focus:outline-none focus:ring-2 focus:ring-[#f3d9f3] rounded px-2 py-1 transition-all duration-150 flex items-center gap-1"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"
                ><path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z"
                  clip-rule="evenodd"></path></svg
              >
              FAQ
            </a>
          </li>
          <li>
            <a
              href="mailto:contact@hollybarnardphd.com"
              class="text-sm text-[#9d4ba2] font-medium hover:text-[#7a3a7a] focus:outline-none focus:ring-2 focus:ring-[#f3d9f3] rounded px-2 py-1 transition-all duration-150 flex items-center gap-1"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"
                ><path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path><path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path></svg
              >
              Contact
            </a>
          </li>
        </ul>

        <!-- Mobile Menu Button -->
        <button
          class="md:hidden text-[#9d4ba2] focus:outline-none p-2"
          type="button"
          aria-label="Toggle navigation"
          onclick="toggleMobileMenu()"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </nav>

      <!-- Mobile Navigation Menu -->
      <div
        id="mobile-menu"
        class="md:hidden hidden bg-white border-t shadow-sm"
      >
        <ul class="px-6 py-4 space-y-3">
          <li>
            <a
              href="/what-we-do"
              class="block text-base text-[#9d4ba2] hover:text-[#7a3a7a] py-2 flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                ><path
                  fill-rule="evenodd"
                  d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                  clip-rule="evenodd"></path></svg
              >
              What We Do
            </a>
          </li>
          <li>
            <a
              href="/the-evaluation"
              class="block text-base text-[#9d4ba2] hover:text-[#7a3a7a] py-2 flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                ><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path></svg
              >
              The Evaluation
            </a>
          </li>
          <li>
            <a
              href="/packages-and-fees"
              class="block text-base text-[#9d4ba2] hover:text-[#7a3a7a] py-2 flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                ><path
                  d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"
                ></path></svg
              >
              Packages & Fees
            </a>
          </li>
          <li>
            <a
              href="/faq"
              class="block text-base text-[#9d4ba2] hover:text-[#7a3a7a] py-2 flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                ><path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z"
                  clip-rule="evenodd"></path></svg
              >
              FAQ
            </a>
          </li>
          <li>
            <a
              href="mailto:contact@hollybarnardphd.com"
              class="block text-base text-[#9d4ba2] font-medium hover:text-[#7a3a7a] py-2 flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                ><path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path><path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path></svg
              >
              Contact
            </a>
          </li>
        </ul>
      </div>
    </header>

    <script>
      function toggleMobileMenu() {
        const menu = document.getElementById("mobile-menu");
        if (menu) {
          menu.classList.toggle("hidden");
        }
      }
    </script>
  </body>
</html>

<slot />

<footer class="bg-gray-900 text-white py-12">
  <div class="max-w-6xl mx-auto px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Contact Information -->
      <div>
        <h3 class="text-xl font-semibold mb-4 text-indigo-300">Contact Us</h3>
        <div class="space-y-2">
          <p class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-indigo-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a
              href="mailto:contact@hollybarnardphd.com"
              class="hover:text-indigo-300 transition-colors"
              >contact@hollybarnardphd.com</a
            >
          </p>
          <p class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-indigo-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <a
              href="tel:12142718018"
              class="hover:text-indigo-300 transition-colors">(214) 271-8018</a
            >
          </p>
        </div>
      </div>

      <!-- Address -->
      <div>
        <h3 class="text-xl font-semibold mb-4 text-indigo-300">Location</h3>
        <div class="flex items-start gap-2">
          <svg
            class="w-5 h-5 text-indigo-400 mt-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <div>
            <p>1506 N. Greenville Ave.</p>
            <p>Suite 210</p>
            <p>Allen, TX 75002</p>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-xl font-semibold mb-4 text-indigo-300">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a href="/about-me" class="hover:text-indigo-300 transition-colors"
              >About Dr. Barnard</a
            >
          </li>
          <li>
            <a
              href="/packages-and-fees"
              class="hover:text-indigo-300 transition-colors">Services & Fees</a
            >
          </li>
          <li>
            <a
              href="/the-evaluation"
              class="hover:text-indigo-300 transition-colors"
              >The Evaluation Process</a
            >
          </li>
          <li>
            <a href="/faq" class="hover:text-indigo-300 transition-colors"
              >FAQ</a
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-700 mt-8 pt-8 text-center">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-sm text-gray-400">
          <p>&copy; 2025 Holly Barnard Ph.D., ABPP-CN. All rights reserved.</p>
          <p class="mt-1">Pediatric & Developmental Neuropsychologist</p>
        </div>
        <div class="text-sm text-gray-400">
          <p>Texas Licensed Psychologist</p>
          <p>Board Certified in Clinical Neuropsychology</p>
        </div>
      </div>
    </div>
  </div>
</footer>
