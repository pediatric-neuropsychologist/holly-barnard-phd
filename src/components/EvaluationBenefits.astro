---
export interface Benefit {
  title: string;
  description: string;
  icon?: string;
}

export interface Props {
  benefits: Benefit[];
}

const { benefits } = Astro.props;
---

<section id="evaluation-benefits" class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
    What You'll Gain
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      benefits.map((benefit) => (
        <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100 hover:shadow-xl transition-shadow duration-300 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center text-white text-2xl mx-auto mb-6">
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">{benefit.title}</h3>
          <p class="text-gray-700 leading-relaxed">{benefit.description}</p>
        </div>
      ))
    }
  </div>
</section>
