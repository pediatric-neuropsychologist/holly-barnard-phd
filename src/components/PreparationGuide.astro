---
export interface PrepItem {
  category: string;
  icon: string;
  items: string[];
}

export interface Props {
  prepItems: PrepItem[];
}

const { prepItems } = Astro.props;
---

<section id="evaluation-what-to-expect-guide" class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
    What to Expect
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {
      prepItems.map((item) => (
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-8 border border-blue-200">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center text-white text-2xl mx-auto mb-4">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900">{item.category}</h3>
          </div>

          <ul class="space-y-3">
            {item.items.map((listItem) => (
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="text-gray-700">{listItem}</span>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
