---
export interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
    {title}
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    {
      items.map((item) => (
        <div class="flex items-center gap-3 p-6 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105 border border-gray-200">
          <div class="w-8 h-8 bg-gradient-to-br from-[#9d4ba2] to-[#7c3aed] rounded-full flex items-center justify-center flex-shrink-0">
            <svg
              class="w-5 h-5 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414L8.414 15l-4.121-4.121a1 1 0 011.414-1.414L8.414 12.172l7.879-7.879a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          </div>
          <span class="text-gray-800 font-medium">{item}</span>
        </div>
      ))
    }
  </div>
</section>
