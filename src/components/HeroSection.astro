---
export interface Props {
  image: string;
  imageAlt: string;
  title: string;
  subtitle?: string;
  description: string;
  reverse?: boolean;
}

const {
  image,
  imageAlt,
  title,
  subtitle,
  description,
  reverse = false,
} = Astro.props;
---

<section
  class={`grid grid-cols-1 md:grid-cols-2 gap-10 items-center mb-16 ${
    reverse ? "md:grid-flow-col-dense" : ""
  }`}
>
  <div class={reverse ? "md:col-start-2" : ""}>
    <h2 class="text-3xl font-bold text-gray-900 mb-6 bg-clip-text">
      {title}
    </h2>
    {subtitle && <p class="text-xl text-gray-600 mb-6">{subtitle}</p>}
    <p class="text-gray-700 leading-relaxed text-lg">{description}</p>
  </div>
  <div class={`text-center ${reverse ? "md:col-start-1" : ""}`}>
    <img
      class={`mx-auto rounded-2xl w-full max-w-md hover:scale-105 transition-transform duration-300`}
      alt={imageAlt}
      src={image}
    />
  </div>
</section>
