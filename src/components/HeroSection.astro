---
export interface Props {
  image?: string;
  imageAlt?: string;
  title?: string;
  subtitle?: string;
  description?: string;
  reverse?: boolean;
}

const {
  image,
  imageAlt,
  title,
  subtitle,
  description,
  reverse = false,
} = Astro.props;

const hasText =
  (title && title.trim()) ||
  (subtitle && subtitle.trim()) ||
  (description && description.trim());
---

<section
  class={`grid grid-cols-1 ${hasText ? "md:grid-cols-2" : ""} gap-10 items-center mb-16 ${
    reverse && hasText ? "md:grid-flow-col-dense" : ""
  } ${!hasText ? "text-center" : ""}`}
>
  {
    hasText && (
      <div class={reverse ? "md:col-start-2" : ""}>
        {title && title.trim() && (
          <h2 class="text-3xl font-bold text-gray-900 mb-6 bg-clip-text">
            {title}
          </h2>
        )}
        {subtitle && subtitle.trim() && (
          <p class="text-xl text-gray-600 mb-6">{subtitle}</p>
        )}
        {description && description.trim() && (
          <p class="text-gray-700 leading-relaxed text-lg">{description}</p>
        )}
      </div>
    )
  }
  {
    image && (
      <div
        class={`${
          !hasText ? "" : reverse ? "md:col-start-1" : ""
        } ${!hasText ? "mx-auto" : "text-center"}`}
      >
        <img
          class={`rounded-2xl w-full max-w-md hover:scale-105 transition-transform duration-300 ${
            !hasText ? "mx-auto" : ""
          }`}
          alt={
            imageAlt ??
            "Holly Barnard, board-certified pediatric neuropsychologist"
          }
          src={image}
        />
      </div>
    )
  }
</section>
