---
import BaseLayout from "../layouts/BaseLayout.astro";
import Accomplishments from "../components/Accomplishments.astro";
import ContactCTA from "../components/ContactCTA.astro";
import EducationAndTraining from "../components/EducationAndTraining.astro";
import FeatureList from "../components/FeatureList.astro";
import HeroSection from "../components/HeroSection.astro";
import MyJourneyQuote from "../components/MyJourneyQuote.astro";
import PageHeader from "../components/PageHeader.astro";
import PublicationAndPresentations from "../components/PublicationAndPresentations.astro";
import StatsCard from "../components/StatsCard.astro";
---

<BaseLayout canonical="https://hollybarnardphd.com">
  <main class="max-w-4xl mx-auto px-8 py-16">
    <PageHeader
      title="Holly Barnard, Ph.D., ABPP-CN"
      subtitle="Pediatric & Developmental Neuropsychologist"
    />

    <HeroSection
      title="Unlocking Potential Through Expertise"
      description="With over 15 years of experience in pediatric neuropsychology, Dr. Holly Barnard is a leading expert in diagnosing and supporting children with neurodevelopmental and neurological conditions. Her work bridges cutting-edge research with compassionate, evidence-based care."
      image="/img/holly-barnard-phd-pediatric-developmental-neuropsychologist.png"
      imageAlt="Dr. Holly Barnard, board-certified pediatric neuropsychologist in Allen, TX"
    />

    <!-- Key Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-12">
      <StatsCard number="15+" label="Years of Experience" />
      <StatsCard number="ABPP-CN" label="Board Certified" />
      <StatsCard number="1000+" label="Evaluations Conducted" />
    </div>

    <MyJourneyQuote />

    <FeatureList
      title="Areas of Expertise"
      items={[
        "Autism Spectrum Disorder (ASD)",
        "Attention & Executive Function Disorders",
        "Traumatic Brain Injury",
        "Hydrocephalus & Neurological Conditions",
        "Hearing Loss & Communication",
        "Specific Learning Disorders",
      ]}
    />

    <EducationAndTraining />

    <Accomplishments />

    <PublicationAndPresentations />

    <FeatureList
      title="Areas of Expertise"
      items={[
        "Autism Spectrum Disorder (ASD)",
        "Attention & Executive Function Disorders",
        "Traumatic Brain Injury",
        "Hydrocephalus & Neurological Conditions",
        "Hearing Loss & Communication",
        "Specific Learning Disorders",
      ]}
    />

    <!-- Publications & Presentations -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        Research & Contributions
      </h2>
      <p class="text-lg text-gray-700 mb-6">
        Dr. Barnard's research has been published in leading journals and
        presented at international conferences, advancing our understanding of
        neurodevelopmental disorders.
      </p>
      <div class="space-y-4">
        <div
          class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-[#9d4ba2]"
        >
          <h3 class="font-semibold text-gray-900">Selected Publications</h3>
          <ul class="mt-2 space-y-1 text-gray-700">
            <li>
              • Social Motor Synchronization and Autism (<em>Autism Research</em
              >, 2017)
            </li>
            <li>
              • Structural Connectivity in Pediatric Hydrocephalus (<em
                >NeuroImage: Clinical</em
              >, 2016)
            </li>
            <li>
              • White Matter Changes Post-Occupational Therapy (<em
                >Neuropediatrics</em
              >, 2016)
            </li>
            <li>
              • Gene-Environment Interactions in ADHD (<em
                >Development and Psychopathology</em
              >, 2009)
            </li>
          </ul>
        </div>
        <div
          class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-[#9d4ba2]"
        >
          <h3 class="font-semibold text-gray-900">Conference Presentations</h3>
          <ul class="mt-2 space-y-1 text-gray-700">
            <li>• IMFAR (International Meeting for Autism Research)</li>
            <li>• American Society for Neuroradiology</li>
            <li>• American Academy of Clinical Neuropsychology</li>
          </ul>
        </div>
      </div>
      <p class="mt-4 text-sm text-gray-600">
        For a complete list, <a
          class="text-[#9d4ba2] hover:underline"
          href="mailto:contact@hollybarnardphd.com">request Dr. Barnard's CV</a
        >.
      </p>
    </section>

    <ContactCTA />
  </main>
</BaseLayout>
