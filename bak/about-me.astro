---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactCTA from "../components/ContactCTA.astro";
import FeatureList from "../components/FeatureList.astro";
import HeroSection from "../components/HeroSection.astro";
import PageHeader from "../components/PageHeader.astro";
import StatsCard from "../components/StatsCard.astro";
---

<BaseLayout>
  <main class="max-w-4xl mx-auto px-8 py-16">
    <PageHeader
      title="About Our Practice"
      subtitle="Supporting Children & Families Through Expert Care"
    />

    <HeroSection
      title="Comprehensive Pediatric Neuropsychology Services"
      description="Our practice specializes in providing thorough neuropsychological evaluations and ongoing support for children with neurodevelopmental, neurological, and learning challenges. We work closely with families, schools, and healthcare providers to ensure every child receives the comprehensive care they deserve."
      image="/img/little-girl-engaging-with-learning.png"
      imageAlt="Child engaged in learning activities"
    />

    <!-- Key Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-12">
      <StatsCard number="15+" label="Years of Experience" />
      <StatsCard number="ABPP-CN" label="Board Certified" />
      <StatsCard number="1000+" label="Families Supported" />
    </div>

    <!-- Our Approach -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        Our Comprehensive Approach
      </h2>
      <div class="space-y-8">
        <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
          <div class="flex items-start gap-6">
            <div class="flex-shrink-0">
              <div
                class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-full flex items-center justify-center text-white text-2xl font-bold"
              >
                1
              </div>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">
                Thorough Assessment
              </h3>
              <p class="text-gray-700 leading-relaxed mb-4">
                We conduct comprehensive neuropsychological evaluations that
                assess cognitive, academic, behavioral, and emotional
                functioning. Our assessments help identify strengths and
                challenges to guide treatment and educational planning.
              </p>
              <ul class="text-gray-600 space-y-2">
                <li>• Cognitive and intellectual assessment</li>
                <li>• Academic skills evaluation</li>
                <li>• Memory and attention testing</li>
                <li>• Executive function assessment</li>
                <li>• Behavioral and emotional evaluation</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
          <div class="flex items-start gap-6">
            <div class="flex-shrink-0">
              <div
                class="w-16 h-16 bg-gradient-to-br from-green-500 to-teal-600 rounded-full flex items-center justify-center text-white text-2xl font-bold"
              >
                2
              </div>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">
                Personalized Recommendations
              </h3>
              <p class="text-gray-700 leading-relaxed mb-4">
                Based on assessment results, we provide detailed recommendations
                tailored to each child's unique needs. Our reports include
                specific strategies for home, school, and community settings.
              </p>
              <ul class="text-gray-600 space-y-2">
                <li>• Educational accommodations and modifications</li>
                <li>• Therapeutic interventions</li>
                <li>• Home-based support strategies</li>
                <li>• School consultation and support</li>
                <li>• Community resource recommendations</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
          <div class="flex items-start gap-6">
            <div class="flex-shrink-0">
              <div
                class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-full flex items-center justify-center text-white text-2xl font-bold"
              >
                3
              </div>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">
                Ongoing Support & Follow-up
              </h3>
              <p class="text-gray-700 leading-relaxed mb-4">
                We believe in building lasting relationships with families. Our
                support extends beyond the evaluation with follow-up
                consultations, progress monitoring, and collaboration with
                treatment providers.
              </p>
              <ul class="text-gray-600 space-y-2">
                <li>• Progress monitoring and re-evaluation</li>
                <li>• Treatment planning consultation</li>
                <li>• School and therapist collaboration</li>
                <li>• Family support and education</li>
                <li>• Long-term care coordination</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        Why Families Choose Our Practice
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div
          class="bg-gradient-to-br from-blue-50 to-indigo-100 p-8 rounded-xl"
        >
          <h3 class="text-xl font-semibold text-gray-900 mb-4">
            Specialized Expertise
          </h3>
          <p class="text-gray-700">
            Dr. Barnard brings 15+ years of experience specifically in pediatric
            neuropsychology, with specialized training in neurodevelopmental
            disorders and board certification in clinical neuropsychology.
          </p>
        </div>
        <div class="bg-gradient-to-br from-green-50 to-teal-100 p-8 rounded-xl">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">
            Comprehensive Care
          </h3>
          <p class="text-gray-700">
            We provide complete neuropsychological services from initial
            consultation through long-term follow-up, ensuring continuity of
            care and comprehensive support for your child's needs.
          </p>
        </div>
        <div
          class="bg-gradient-to-br from-purple-50 to-pink-100 p-8 rounded-xl"
        >
          <h3 class="text-xl font-semibold text-gray-900 mb-4">
            Family-Centered Approach
          </h3>
          <p class="text-gray-700">
            We work closely with parents, educators, and healthcare providers to
            create a supportive network that addresses all aspects of your
            child's development and well-being.
          </p>
        </div>
        <div class="bg-gradient-to-br from-orange-50 to-red-100 p-8 rounded-xl">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">
            Evidence-Based Practice
          </h3>
          <p class="text-gray-700">
            Our evaluations and recommendations are grounded in the latest
            research and clinical best practices, ensuring the highest quality
            of care for your child.
          </p>
        </div>
      </div>
    </section>

    <FeatureList
      title="Conditions We Support"
      items={[
        "Autism Spectrum Disorder (ASD)",
        "Attention & Executive Function Disorders",
        "Traumatic Brain Injury",
        "Hydrocephalus & Neurological Conditions",
        "Hearing Loss & Communication",
        "Specific Learning Disorders",
        "Developmental Delays",
        "Genetic & Chromosomal Disorders",
        "Epilepsy & Seizure Disorders",
        "Neurodevelopmental Disorders",
      ]}
    />

    <!-- Our Commitment -->
    <section class="mb-16">
      <div
        class="bg-gradient-to-r from-[#9d4ba2] to-[#7a3a7a] text-white p-8 rounded-xl text-center"
      >
        <h2 class="text-3xl font-bold mb-6">Our Commitment to You</h2>
        <p class="text-xl leading-relaxed max-w-3xl mx-auto">
          We are dedicated to providing compassionate, comprehensive care that
          empowers children and families to reach their full potential. Every
          evaluation is conducted with the utmost care, professionalism, and
          attention to detail.
        </p>
      </div>
    </section>

    <ContactCTA />
  </main>
</BaseLayout>
